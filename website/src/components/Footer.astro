---
const currentYear = new Date().getFullYear();
const githubUrl = 'https://github.com/yazhsab/qbitel-qsgw';

const productLinks = [
  { label: 'Features', href: '#features' },
  { label: 'Threat Detection', href: '#threats' },
  { label: 'Architecture', href: '#architecture' },
  { label: 'Quick Start', href: '#quickstart' },
  { label: 'Comparison', href: '#comparison' },
];

const resourceLinks = [
  { label: 'Documentation', href: '#docs' },
  { label: 'API Reference', href: `${githubUrl}/blob/main/docs/API.md` },
  { label: 'Contributing', href: `${githubUrl}/blob/main/CONTRIBUTING.md` },
  { label: 'GitHub', href: githubUrl },
];

const ecosystemLinks = [
  { label: 'QRAP', href: 'https://yazhsab.github.io/qbitel-qrap/', desc: 'Quantum Risk Assessment' },
  { label: 'PQC-SDK', href: 'https://yazhsab.github.io/qbitel-pqc-sdk/', desc: 'PQC SDK for IoT' },
  { label: 'QSGW', href: 'https://yazhsab.github.io/qbitel-qsgw/', desc: 'Quantum-Safe Gateway', active: true },
];
---

<footer class="border-t border-white/5 bg-[var(--color-surface)]">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <div class="w-9 h-9 rounded-lg bg-gradient-to-br from-brand-400 to-brand-600 flex items-center justify-center font-bold text-white text-sm">Q</div>
          <span class="font-bold text-lg text-white">QSGW</span>
        </div>
        <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-4">
          Enterprise-grade quantum-safe API gateway. Post-quantum TLS, AI threat detection, and configurable security policies.
        </p>
        <div class="flex items-center gap-3">
          <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="text-[var(--color-text-muted)] hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
        </div>
      </div>

      <!-- Product -->
      <div>
        <h3 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">Product</h3>
        <ul class="space-y-3">
          {productLinks.map(link => (
            <li><a href={link.href} class="text-sm text-[var(--color-text-muted)] hover:text-white transition-colors">{link.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">Resources</h3>
        <ul class="space-y-3">
          {resourceLinks.map(link => (
            <li><a href={link.href} target={link.href.startsWith('http') ? '_blank' : undefined} rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined} class="text-sm text-[var(--color-text-muted)] hover:text-white transition-colors">{link.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Ecosystem -->
      <div>
        <h3 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">Qbitel Ecosystem</h3>
        <ul class="space-y-3">
          {ecosystemLinks.map(link => (
            <li>
              <a href={link.href} target="_blank" rel="noopener noreferrer"
                class={`text-sm transition-colors ${link.active ? 'text-brand-400' : 'text-[var(--color-text-muted)] hover:text-white'}`}>
                {link.label}
                <span class="text-xs text-[var(--color-text-muted)] block">{link.desc}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-xs text-[var(--color-text-muted)]">
        &copy; {currentYear} Qbitel. Licensed under <a href={`${githubUrl}/blob/main/LICENSE`} target="_blank" class="text-brand-400 hover:underline">Apache License 2.0</a>.
      </p>
      <p class="text-xs text-[var(--color-text-muted)]">
        Built with &#10084;&#65039; by <a href="https://github.com/yazhsab" target="_blank" class="text-brand-400 hover:underline">Qbitel</a>
      </p>
    </div>
  </div>
</footer>
