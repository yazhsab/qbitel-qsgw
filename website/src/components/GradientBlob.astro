---
interface Props {
  size?: number;
  color?: string;
  top?: string;
  left?: string;
  delay?: string;
}

const {
  size = 400,
  color = 'rgba(26, 26, 46, 0.4)',
  top = '20%',
  left = '10%',
  delay = '0s',
} = Astro.props;
---

<div
  class="absolute rounded-full blur-3xl pointer-events-none animate-float"
  style={`width:${size}px;height:${size}px;background:${color};top:${top};left:${left};animation-delay:${delay};`}
  aria-hidden="true"
></div>
