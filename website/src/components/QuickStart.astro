---
import SectionHeading from './SectionHeading.astro';

const healthResponse = '{"status":"ok","service":"qsgw-control-plane"}';
---

<section class="py-24 px-6 relative">
  <div class="max-w-4xl mx-auto">
    <SectionHeading
      id="quickstart"
      title="Deploy in Under 60 Seconds"
      subtitle="One command to deploy the full stack â€” gateway, control plane, AI engine, and admin UI"
    />

    <!-- Docker Quick Start -->
    <div class="glass-card overflow-hidden mb-8" data-animate>
      <div class="flex items-center gap-2 px-4 py-3 border-b border-white/5 bg-white/[0.02]">
        <div class="flex gap-1.5">
          <div class="w-3 h-3 rounded-full bg-red-500/60"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500/60"></div>
          <div class="w-3 h-3 rounded-full bg-green-500/60"></div>
        </div>
        <span class="text-xs text-[var(--color-text-muted)] ml-2 font-mono">Docker Quick Start</span>
      </div>
      <div class="p-5 font-mono text-sm leading-loose">
        <div><span class="text-[var(--color-text-muted)]"># Clone and start the full stack</span></div>
        <div><span class="text-brand-400">$</span> <span class="text-white">git clone https://github.com/yazhsab/qbitel-qsgw.git && cd qbitel-qsgw</span></div>
        <div><span class="text-brand-400">$</span> <span class="text-white">make docker-all</span></div>
        <div class="mt-3"><span class="text-[var(--color-text-muted)]"># Verify</span></div>
        <div><span class="text-brand-400">$</span> <span class="text-white">curl http://localhost:8085/health</span></div>
        <div class="text-green-400/70" set:html={healthResponse} />
      </div>
    </div>

    <!-- Service URLs -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-12" data-animate>
      <div class="glass-card p-4 text-center">
        <div class="text-xs text-brand-400 font-mono mb-1">:8443</div>
        <div class="font-semibold text-white text-sm">Gateway</div>
        <div class="text-xs text-[var(--color-text-muted)]">Rust + PQC TLS</div>
      </div>
      <div class="glass-card p-4 text-center">
        <div class="text-xs text-brand-400 font-mono mb-1">:8085</div>
        <div class="font-semibold text-white text-sm">Control Plane</div>
        <div class="text-xs text-[var(--color-text-muted)]">Go Admin API</div>
      </div>
      <div class="glass-card p-4 text-center">
        <div class="text-xs text-brand-400 font-mono mb-1">:8086</div>
        <div class="font-semibold text-white text-sm">AI Engine</div>
        <div class="text-xs text-[var(--color-text-muted)]">Python + FastAPI</div>
      </div>
      <div class="glass-card p-4 text-center">
        <div class="text-xs text-brand-400 font-mono mb-1">:3003</div>
        <div class="font-semibold text-white text-sm">Admin UI</div>
        <div class="text-xs text-[var(--color-text-muted)]">React 19</div>
      </div>
    </div>
  </div>
</section>
