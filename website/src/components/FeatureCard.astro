---
interface Props {
  icon: string;
  title: string;
  description: string;
  stagger?: number;
}

const { icon, title, description, stagger = 1 } = Astro.props;
---

<div class={`glass-card-hover p-6 md:p-8 stagger-${stagger}`} data-animate>
  <div class="text-4xl mb-4">{icon}</div>
  <h3 class="text-xl font-bold text-white mb-3">{title}</h3>
  <p class="text-[var(--color-text-muted)] leading-relaxed text-sm">{description}</p>
</div>
